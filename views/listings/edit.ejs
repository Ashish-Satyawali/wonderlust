<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="mt-3">Edit Your Listings</h2>
            <form class="mt-3 needs-validation" method="post" action="/listings/<%= list.id %>?_method=PUT" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label mb-0">Title</label>
                    <input type="text" value="<%= list.title %>" name="listing[title]" id="title" class="form-control " required>
                    <div class="valid-feedback">Title looks good</div>
                </div>
                <div class="mb-3">
                    <label for="description"  class="form-label mb-0">Description</label>
                    <textarea  name="listing[description]" id="description" class="form-control" required><%= list.description %></textarea>
                    <div class="invalid-feedback">Enter a valid description</div>
                </div>
                <div class="mb-3">
                    <p class="mb-0"><b><i>original listing image</i></b></p>
                    <img class="originalImage" src="<%=transformedUrl%>" height="150px" width="250px">
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-6"> 
                        <label for="image"  class="form-label mb-0">Upload New Image</label>
                        <input type="file"  name="listing[image]" id="image" class="form-control" >                   
                    </div>
                    <div class="mb-3 col-md-6">
                        <%- include("../includes/newDropdowns.ejs") %> 
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price"  class="form-label mb-0">Price</label>
                        <input type="number" value="<%= list.price %>" name="listing[price]" id="price" class="form-control" required >
                        <div class="invalid-feedback">Enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country"  class="form-label mb-0">Country</label>
                        <input type="text" value="<%= list.country %>" required name="listing[country]" id="country" class="form-control"  >
                        <div class="invalid-feedback">Enter a valid country</div>
                    </div>
                </div>
                <div class="mb-3">
                        <label for="location"  class="form-label mb-0">Location</label>
                        <input type="text" value="<%=list.location%>" name="listing[location]" id="location" class="form-control" required>
                        <div class="invalid-feedback">Enter a valid location</div>
                </div>
                <br>
                <button class="btn btn-danger edit-button ">Edit</button>
                <br><br>
            </form>
        </div>
    </div> 
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

