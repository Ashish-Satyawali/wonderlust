<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="mt-3">Create New Listing</h2>
            <form method="post" action="/listings/new" class="mt-3 needs-validation newForm" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label mb-0">Title</label>
                    <input type="text" placeholder="add a catchy title" name="listing[title]" required id="title" class="form-control">
                    <div class="valid-feedback">Title looks good</div>
                </div>
                <div class="mb-3">
                    <label for="description"  class="form-label mb-0">Description</label>
                    <textarea  name="listing[description]" id="description" class="form-control" required ></textarea>
                    <div class="invalid-feedback">Enter a valid description</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6"> 
                        <label for="image"  class="form-label mb-0">Upload Image</label>
                        <input type="file"  name="listing[image]" id="image" class="form-control" required>                   
                    </div>
                    <div class="mb-3 col-md-6">
                        <%- include("../includes/newDropdowns.ejs") %> 
                    </div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price"  class="form-label mb-0">Price</label>
                        <input type="text" placeholder="2000" name="listing[price]" id="price" class="form-control" required >
                        <div class="invalid-feedback">Enter a valid Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country"  class="form-label mb-0">Country</label>
                        <input type="text" placeholder="India" name="listing[country]" id="country" class="form-control" required >
                        <div class="invalid-feedback">Enter a valid country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location"  class="form-label mb-0">Location</label>
                    <input type="text" placeholder="Almora,Uttarakhand" name="listing[location]" id="location" class="form-control" required >
                    <div class="invalid-feedback">Enter a valid location</div>
                </div>
                <br>
                <button class="btn btn-danger add-button ">Add</button>
                <br><br>
            </form>
        </div>
    </div>
</body>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>









